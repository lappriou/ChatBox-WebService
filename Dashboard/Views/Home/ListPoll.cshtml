@model Dashboard.ViewModels.Home.ListPollViewModel

@{
    ViewBag.Title = "ListPoll";
}

<h2>ListPoll</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RaclettePollsList.First().User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RaclettePollsList.First().Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RaclettePollsList.First().Like)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RaclettePollsList.First().Favorite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RaclettePollsList.First().Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.RaclettePollsList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Like)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Favorite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
    </tr>
}

</table>
